        android:layout_width="0dp"
        android:id="@+id/include" />

    <EditText
        android:id="@+id/input_type"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tipo de UsuÃ¡rio"
        app:layout_constraintTop_toBottomOf="@+id/input_name"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="368dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/input_turmas"
        android:layout_width="368dp"
        android:layout_height="280dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/input_type"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/input_turma_label" />

    <EditText
        android:id="@+id/input_turma_label"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Turmas"
        app:layout_constraintTop_toBottomOf="@+id/input_type"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
